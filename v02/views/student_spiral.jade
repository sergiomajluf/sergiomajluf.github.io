         /container 
      //
         Modal - Questions 
      #myModalQuestion01.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
          .modal-content
            form.form-signin(role='form')
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#myModalLabel.modal-title What do I believe?
              .modal-body
                textarea#q01.form-control(rows='5', cols='70', placeholder='What do I believe', required='required', autofocus='autofocus') #{student.answer1}
              .modal-footer
                button.btn.btn-primary(type='submit', data-dismiss='modal') Save
