extends layout

block content
 body
      .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            a.navbar-brand(href='') Moral Courage 
              strong #{student.name}
          .collapse.navbar-collapse
            ul.nav.navbar-nav
               li
                 a#userPreferences(href='#', title='Edit user preferences', data-toggle='tooltip')
                   i.glyphicon.glyphicon-cog
               li.active
                 a#position Drag your identity's cell to explore the questions
          //
            /.nav-collapse 
      .container
        #containment-wrapper.doubleClickArea
          #draggableCell.draggable.ui-widget-content
            p#cell.ui-widget-header(data-toggle='tooltip', title='Double click to edit your Identities.') Cell
